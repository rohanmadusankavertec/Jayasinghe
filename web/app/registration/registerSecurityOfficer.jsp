                                <tr>
                                    <td class=" "><%=c.getId()%></td>
                                    <td class=" "><%=c.getName()%></td>
                                    <td class=" last"> 
                                        <form name="form1" method="post" action="Registration?action=UpdateSecurityOfficer"><input type="hidden" name="securityId" value="<%=c.getId()%>"/>
                                            <button type="submit" class="glyphicon glyphicon-edit">
                                            </button>
                                        </form>
                                    </td>
                                    <td class=" last"> 
                                        <form name="form1" method="post" action="Registration?action=RemoveSecurityOfficer"><input type="hidden" name="securityId" value="<%=c.getId()%>"/>
                                            <button id="send" type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
